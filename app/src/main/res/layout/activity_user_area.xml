<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.soundly.UserAreaActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin"
        android:weightSum="1">


        <ImageView
            android:layout_width="150dp"
            android:layout_height="72dp"
            android:layout_gravity="right"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:src="@mipmap/ic_launcher" />


        <Button
        android:id="@+id/bSettings"
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="Settings"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintHorizontal_bias="0.506" />

        <TextView
            android:id="@+id/tvgraph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.11"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="8sp"
            android:text="View your latest Sleep"
            android:textColor="@color/white"
            android:typeface="normal"
            tools:text="View your latest Sleep" />

        <Button
        android:id="@+id/bTimer"
        android:layout_width="311dp"
        android:layout_height="48dp"
        android:background="@color/colorAccent"
        android:text="Timer"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        tools:layout_editor_absoluteY="437dp"
        tools:layout_editor_absoluteX="82dp" />

    <Button
        android:id="@+id/bStart"
        android:layout_width="311dp"
        android:layout_height="48dp"
        android:background="@color/colorAccent"
        android:text="Start Soundly"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toTopOf="@+id/bTimer"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/bSettings"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintVertical_bias="0.135" />

    </LinearLayout>



</android.support.constraint.ConstraintLayout>
