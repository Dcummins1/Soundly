<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.soundly.UserAreaActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">









    <Button
        android:id="@+id/bSettings"
        android:layout_width="88dp"
        android:layout_height="60dp"
        android:background="@drawable/settings"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/tvgraph"
            android:layout_width="158dp"
            android:layout_height="26dp"
            android:layout_weight="0.11"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="8sp"
            android:text="View your latest Sleep"
            android:textColor="@color/colorPrimaryDark"
            android:typeface="normal"
            tools:text="View your latest Sleep"
            tools:layout_editor_absoluteY="16dp"
            tools:layout_editor_absoluteX="16dp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:weightSum="1">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/linearLayout3"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView">

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/activity_horizontal_margin"
                android:weightSum="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:layout_editor_absoluteY="63dp">>

                <Button
                    android:id="@+id/playButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/playpause"
                    android:onClick="spotifyPlayPause"
                    android:padding="8dp"
                    tools:layout_editor_absoluteX="96dp"
                    tools:layout_editor_absoluteY="83dp" />


                <Button
                    android:id="@+id/nextButton"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/next"
                    android:onClick="spotifyNext"
                    android:padding="8dp"
                    tools:layout_editor_absoluteX="205dp"
                    tools:layout_editor_absoluteY="83dp" />
            </LinearLayout>

            <Button
                android:id="@+id/launchSpotify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorPrimaryDark"
                android:clickable="true"
                android:fontFamily="sans-serif-condensed"
                android:onClick="openSpotify"
                android:textSize="20dp"
                android:textStyle="italic"
                android:typeface="monospace"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="186dp" />
        </LinearLayout>


        <ImageView
            android:layout_width="226dp"
            android:layout_height="134dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/imageView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/bStart" />


        <Button
            android:id="@+id/bStart"
            android:layout_gravity="center"
            android:layout_width="249dp"
            android:layout_height="68dp"
            android:paddingBottom="30dp"
            android:background="@color/colorAccent"
            android:text="Start Soundly"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="268dp" />


    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:weightSum="1"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/bStart"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/textView"
            android:textSize="30sp"
            android:paddingTop="16dp"
            android:paddingRight="16dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="78dp"
            android:freezesText="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/Buttons"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="359dp" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="123dp"
            android:layout_height="76dp"
            android:ems="10"
            android:hint="Time in Mins"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteX="125dp"
            tools:layout_editor_absoluteY="361dp" />


        <LinearLayout
            android:id="@+id/Buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="8dp">

            <Button
                android:id="@+id/startButton"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_margin="4dp"
                android:background="@color/colorAccent"
                android:text="Start Timer"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="457dp" />

            <Button
                android:id="@+id/stopButton"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_margin="4dp"
                android:background="@color/colorAccent"
                android:text="Cancel"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                tools:layout_editor_absoluteX="266dp"
                tools:layout_editor_absoluteY="457dp" />

        </LinearLayout>

    </LinearLayout>





    </LinearLayout>


</android.support.constraint.ConstraintLayout>
